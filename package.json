{
  "name": "simple-wallet",
  "version": "0.1.0",
  "description": "A simple crypto wallets service. You can create or add exists crypto wallets. Transaction notifications. Management via TG or API.",
  "author": "judemax",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "11.1.12",
    "@nestjs/core": "11.1.12",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-fastify": "^11.1.12",
    "@nestjs/sequelize": "^11.0.1",
    "bip39": "^3.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "17.2.3",
    "es6-shim": "^0.35.8",
    "kafkajs": "2.2.4",
    "pg": "8.17.1",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "7.8.2",
    "sequelize": "6.37.7",
    "sequelize-cli": "6.6.5",
    "sequelize-typescript": "2.1.6",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@nestjs/testing": "11.1.12",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@types/jest": "29.4.3",
    "@types/node": "^24.8.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.38.0",
    "eslint-plugin-newline-after-if-condition": "^1.1.0",
    "globals": "^16.4.0",
    "jest": "29.4.3",
    "jiti": "^2.6.1",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.3",
    "typescript-eslint": "^8.46.1"
  },
  "scripts": {
    "lint": "eslint --exit-on-fatal-error --ext .js,.ts .",
    "lint-fix": "eslint --fix --ext .js,.ts .",
    "test": "jest",
    "coverage": "jest --coverage",
    "dev": "tsx src/main.ts",
    "build": "tsc",
    "start": "node dist/src/main.js",
    "containers:up": "docker-compose --env-file ./.env -f ./docker/docker-compose.yml  up --build -d",
    "migrations:up": "npx sequelize-cli --env local --config './migrations/config.js' --migrations-path './migrations/migrations' db:migrate",
    "migrations:undo": "npx sequelize-cli --env local --config './migrations/config.js' --migrations-path './migrations/migrations' db:migrate:undo"
  }
}
